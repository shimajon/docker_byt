
<div class="contents row">
  <div class="container">
    <h2>アカウント編集</h2>
    <%= form_with model: @user, url: user_registration_path, method: :put ,id: 'edit_user', class: 'edit_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :nickname %> <em>※最大6文字まで</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "6", autocomplete: "nickname"  %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(変更しない場合は空欄のままにしてください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上で入力して下さい</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(情報を変更するには下記の入力が必須です)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新" %>
      </div>
    <% end %>
    <br />
    <h3 class="edit h3">アカウントの削除はこちら</h3>
    <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  </div>
</div>
