<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>

  <% @catch_copies.each do |catch_copy | %>
    <div class="content_post">
      <span class="fa-lg fas fa-heart icon-btn"><%= catch_copy.likes.count %></span>
      <div class="more">
        <span><%= image_tag '/arrow_top.png'%></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/catch_copies/#{catch_copy.id}", method: :get %>
          </li>
            <li>
              <%= link_to '編集', "/catch_copies/#{catch_copy.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/catch_copies/#{catch_copy.id}", method: :delete %>
            </li>
        </ul>
      </div>
      <span class="title">
        <%= catch_copy.title %>
      </span>
      <%= image_tag(catch_copy.image,class: 'image') %>
      <div class="job_category">
        <span>職種：</span>
      </div>
      <%= simple_format(catch_copy.job_category,class: 'job_name') %>
       <div class="target">
       <span>ターゲット：
       </div>
       </span>
      <%= simple_format(catch_copy.target,class: 'target_name') %>
    </div>
  <% end %>
    <%= paginate(@catch_copies) %>
</div>