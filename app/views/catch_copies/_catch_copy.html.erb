    <div class="content_post">
      <div class="more">
        <span><%= image_tag '/arrow_top.png'%></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/catch_copies/#{catch_copy.id}", method: :get %>
          </li>
            <li>
              <%= link_to '編集', "/catch_copies/#{catch_copy.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/catch_copies/#{catch_copy.id}", method: :delete %>
            </li>
        </ul>
      </div>
      <span class="title">
        <%= catch_copy.title %>
      </span>
      <%= image_tag(catch_copy.image,class: 'image') %>
      <div class="job_category">
        <span>職種：</span>
      </div>
      <%= simple_format(catch_copy.job_category,class: 'job_name') %>
       <div class="target">
       <span>ターゲット：
       </div>
       </span>
      <%= simple_format(catch_copy.target,class: 'target_name') %>
      <span class="name">
      <span>投稿者</span><%= catch_copy.user.nickname %>
      </span>
      <span id="like-<%= catch_copy.id %>">
        <%= render partial: 'like', locals: { catch_copy: catch_copy } %>
      </span>
    </div>