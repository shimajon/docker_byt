<div class="contents row">
  <div class="container">
    <%= form_with(model: @catch_copy, local: true) do |f| %>
      
      <h3 >
        <div class="fa-lg far fa-question-circle yureru-s"></div>あなたの「ベストタイトル」を投稿しよう
      </h3>
      <%= render partial: 'slide' %>
      <%= f.text_field :title, placeholder: "タイトル(キャッチコピー)を入力", autofocus: true, maxlength: "20" %>
      <div class="explanation">以下の条件で、「応募したい！」と思えるタイトルを作成しよう！</div>
      <div class="boder"></div>
      <div class="info"><h2>《求人情報》</h2></div>
      <div class="explanation">※上の画像をクリックすると、下記項目は自動で入力されます※</div>
      <%= f.text_field :image, class:"image_send" %>   
      <%= f.text_field :job_category, class:"send_job" %>
      <%= f.label :ターゲット %>
      <%= f.text_field :target, class:"target", placeholder: "自動入力" %>
      <%= f.label :時給 %>
      <%= f.text_field :pay, class:"pay", placeholder: "自動入力" %>
      <%= f.label :勤務シフト %>
      <%= f.text_field :shift, class:"shift", placeholder: "自動入力" %>
      <%= f.label :最寄り駅からの距離 %>
      <%= f.text_field :commuting, class:"commuting", placeholder: "自動入力" %>
      <%= f.submit "SEND" %>
    <% end %>
  </div>
</div>

<%= render partial: 'modal' %>